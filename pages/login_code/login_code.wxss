.code_input {
  width: 100%;
  height: 100%;
}

.code_input_header {
  width: 90%;
  margin: auto;
  margin-top: 120rpx;
  line-height: 100rpx;
}

.login_phone text {
  font-size: 32rpx;
  color: #666;
}

.send_text, .login_title text {
  padding-left: 40rpx;
}

.login_title text {
  font-size: 52rpx;
  color: #333;
}

.code_number {
  display: inline-block;
  font-size: 32rpx;
  color: #666;
}

.code_number text {
  padding: 10rpx;
}

.content {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-top: 40rpx;
  width: 88%;
  margin: auto;
}

.iptbox {
  width: 79rpx;
  height: 75rpx;
  border: 1rpx solid #ddd;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.ipt {
  width: 0;
  height: 0;
}

.login_get {
  width: 80%;
  margin: auto;
  border-radius: 20rpx;
  text-align: center;
  height: 105rpx;
  line-height: 105rpx;
  margin-top: 60rpx;
  background: #dfddde;
  color: #fff;
}

.activeClass {
  background: #ff8432;
}

.send_code {
  display: flex;
  margin-top: 52rpx;
  font-size: 24rpx;
  align-items: center;
  justify-content: center;
}
.send_code text{
  color: #dfddde;
  padding: 20rpx;
}
.send_code button {
  background: none;
  margin: 0;
  padding: 0;
  border: 0;
  outline: none;
  font-size: 32rpx;
  color: #dfddde;
}


