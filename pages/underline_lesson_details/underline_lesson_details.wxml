<view class="underline_leson_details">
  <view class='underline_img'>
    <image src='../../images/fengmian.jpg'></image>
  </view>

  <view class='con'>
    <view class='under_title'>
      <view class='under_title_b flex'>
        <image src='../../images/icon-headline.png' mode='widthFix'></image>
        <text class='hot_baoming'>火热报名中</text>
        <text class='yujian'>“预见.新餐饮”第一期</text>
      </view>
    </view>
    <view class='name'>
      <text class='kaican_lesson'>主办方：</text>
      <text>开餐课堂</text>
    </view>
    <view class='under_title'>
      <view class='under_title_b flex'>
        <image src='../../images/icon_shijian.png' mode='scaleToFill'></image>
        <text class='lesson_under_time pl_20'>2018-12-18</text>
        <text class='lesson_under_time ttt'>9:00-12:00</text>
      </view>
    </view>
    <view class='address flex'>
      <image src='../../images/address.png' mode='scaleToFill'></image>
      <text class='pl_20 lesson_under_time'>济南</text>
    </view>
  </view>
  <view class='instro'>
    <view class='instro_img'>
      <image src='../../images/11.26c4f4f.jpg' mode='widthFix'></image>
    </view>

  </view>
  <view class='index_youxuan'>
    <view class='index_jingxuan_title'>
      <view class='index_jingxuan_left'></view>
      <view>关联工具</view>
    </view>

    <scroll-view class="scroll-header" scroll-x="true" style="width: 100%">
      <image src='{{item}}' class='scroll_img' wx:for="{{jingxuan}}"></image>
    </scroll-view>
  </view>
  <view class='index_lesson_more'>
    <view class='index_jingxuan_title'>
      <view class='index_jingxuan_left'></view>
      <view>课程推荐</view>
    </view>
    <view class='flex index_lesson_ii' >
      <view class='index_lesson_more_lefts' wx:for="{{list}}">
        <view class='uu'>
          <image src='{{item.images}}'></image>
          <view class='index_lesson_title'>
            <text>{{item.title}}</text>
          </view>
          <view class='index_lesson_teacer ell'>
            <text>主讲老师：{{item.teacher}}</text>
            <text class='index_lesson_num'>{{item.dec}}</text>
          </view>
          <view class='index_lesson_time'>
            <text>时长：{{item.time}}分钟/节</text>
            <text class='index_lesson_num'>{{item.people}}人已学</text>
          </view>
        </view>

      </view>
     
    </view>
  </view>
  <view class='btn'>
    <view class='flex_around btn_c'>
      <view class='btn_open b_c'>
      <image src='../../images/icon_baoming.png'></image>
        <text class='vip'>我要报名</text>
      </view>
      <view class='btn_opens b_c'>
      <image src='../../images/icon_dianhua.png'></image>
        <text class='vip'>电话咨询</text>
      </view>
    </view>
  </view>
</view>