.login_container {
  height: 100%;
  width: 100%;
}

.login_header {
  width: 90%;
  margin: auto;
  margin-top: 120rpx;
  line-height: 100rpx;
}

.login_title text, .login_phone   text {
  padding-left: 40rpx;
}

.login_title text {
  font-size: 52rpx;
  color: #333;
}

.login_phone text, .login_86 {
  font-size: 32rpx;
  color: #666;
}

.login_input {
  display: flex;
  align-items: center;
  width: 90%;
  margin: auto;
  height: 112rpx;
}

.login_time {
  display: inline-block;
}

.login_input_in {
  border-bottom: 1px solid #ccc;
  height: 97rpx;
  display: flex;
  align-items: center;
}

.login_input_in input {
  padding-left: 40rpx;
  color: #333;
  font-size: 32rpx;
  height: 40rpx;
}

.login_get text {
  color: #fff;
  font-size: 36rpx;
}

.login_input image {
  width: 44rpx;
  height: 44rpx;
}

.login_get {
  width: 80%;
  margin: auto;
  border-radius: 20rpx;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  margin-top: 60rpx;
  background: #dfddde;
}

.activeClass {
  background: #ff8432;
}

.login_t {
  margin-top: 52rpx;
  font-size: 24rpx;
  color: #bf999999;
}

.login_wechat image {
  width: 100rpx;
  height: 100rpx;
}

.login_wechat {
  width: 100%;
  text-align: center;
}

.wx_login {
  font-size: 24rpx;
}

.login_wechat_text {
  width: 100%;
  text-align: center;
  position: absolute;
  bottom: 5%;
  color: #999;
}

.login_login {
  position: absolute;
  width: 100px;
  height: 50px;
  top: 50%;
  left: 50%;
  margin-left: -50px;
  margin-top: -50px;
  text-align: center;
}

button {
  background: #fff;
  width: 225rpx;
}
