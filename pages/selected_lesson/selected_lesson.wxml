<view class="swiper-tabs position">

     <view class='flex'>
        <view class='index_jingxuan_left'></view>
        <view class='index_meun_title'>精选分类</view>
      </view>
  <view class="swiper-tab-item {{currentTab==index?'active':''}}" wx:for="{{getLessonTab}}" wx:key="index" data-current="{{index}}" bindtap="clickTab">{{item}}</view>
</view>
<swiper current="{{currentTab}}" bindchange="swiperTab" style="height:{{winHeight}}px;">
  <swiper-item class="swi">
  <view wx:if="{{!select_lesson.length}}" class='kong_ss'>
        <view class='kong'>
          <image src='../../images/kong.png' class='kong_img'></image>
          <view class='kong_text'>这里空空如也</view>
        </view>
      </view>
    <view class="all_lesson" wx:for="{{select_lesson}}" bindtap='lesson_details' data-id='{{item.sid}}'>
      <view class='all_lesson_content'>
        <view class='flexs'>
          <view class='flex_all_img'>
            <image src='{{item.image_small}}'></image>
          </view>
          <view class='flex_all_txet'>
            <view class='all_lesson_title ell'>{{item.title}}</view>
            <view class='all_lesson_title_p flex'>
              <text class='all_lesson_name'>{{item.teacher}}</text>
              <text class='all_lesson_position ell'>{{item.desc}}</text>
            </view>
            <view class='all_lesson_time'>
              <text class='all_lesson_dom'>{{item.video_mins}}分钟/{{item.video_nums}}节</text>
              <text class='all_lesson_people'>{{item.nums}}人已学</text>
            </view>
          </view>
        </view>
      </view>
      
    </view>
  </swiper-item>

   <swiper-item class="swi">
    <view class="all_lesson" wx:for="{{free_lesson}}" bindtap='lesson_details' data-id='{{item.sid}}'>
      <view class='all_lesson_content'>
        <view class='flexs'>
          <view class='flex_all_img'>
            <image src='{{item.image_small}}'></image>
          </view>
          <view class='flex_all_txet'>
            <view class='all_lesson_title ell'>{{item.title}}</view>
            <view class='all_lesson_title_p flex'>
              <text class='all_lesson_name'>{{item.teacher}}</text>
              <text class='all_lesson_position ell'>{{item.desc}}</text>
            </view>
            <view class='all_lesson_time'>
              <text class='all_lesson_dom'>{{item.video_mins}}分钟/{{item.video_nums}}节</text>
              <text class='all_lesson_people'>{{item.nums}}人已学</text>
            </view>
          </view>
        </view>
      </view>
      
    </view>
  </swiper-item>
</swiper>
